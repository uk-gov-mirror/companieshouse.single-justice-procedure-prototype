<div
  class="notification-panel
  {%- if params.classes %} {{ params.classes }}{% endif %}"
  aria-labelledby="notification-summary-title"
  role="alert"
  tabindex="-1"
  {%- for attribute, value in params.attributes %}
  {{ attribute }}="{{ value }}"
  {% endfor %}
  data-module="notification-summary">
  <h2 class="notification-panel__title" id="notification-summary-title">
    {{ params.titleHtml | safe if params.titleHtml else params.titleText }}
  </h2>
  <div class="notification-panel__body">
    {% if params.descriptionHtml or params.descriptionText %}
      <p>
        {{ params.descriptionHtml | safe if params.descriptionHtml else params.descriptionText }}
      </p>
    {% endif %}
    {% if params.notificationList.length > 0 %}
      <ul class="govuk-list notification-panel__list">
        {% for item in params.notificationList %}
          <li>
            {% if item.href %}
              <a href="{{ item.href }}" {% for attribute, value in item.attributes %} {{attribute}}="{{value}}" {% endfor %}>{{ item.html | safe if item.html else item.text }}</a>
            {% else %}
              {{ item.html | safe if item.html else item.text }}
            {% endif %}
          </li>
        {% endfor %}
      </ul>
    {% endif %}
  </div>
</div>